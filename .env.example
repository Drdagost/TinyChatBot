# -----------------------------------------------------------------------------
# Paths / data locations
# -----------------------------------------------------------------------------
CONTENT_DIR=content
DATA_DIR=data
CHROMA_DIR=data/chroma

# -----------------------------------------------------------------------------
# Model + embedding defaults
# -----------------------------------------------------------------------------
# Chat/tokenizer model (examples: gpt-4o-mini, gpt-4o, o3)
LLM_MODEL=gpt-4o-mini

# Embedding model + batching
EMBEDDING_MODEL=text-embedding-3-small
EMBED_BATCH_SIZE=64

# Chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# Vector store selection
# -----------------------------------------------------------------------------
# Preferred provider key (faiss | pinecone | chroma | memory)
VECTOR_PROVIDER=faiss
# Backwards-compatible alias used by older configs
VECTOR_DB=faiss

# Pinecone options
PINECONE_API_KEY=
PINECONE_ENV=
PINECONE_INDEX=tinychatbot-index

# -----------------------------------------------------------------------------
# LLM provider selection
# Supported values: openai, azure, huggingface, openrouter, local, ollama
# -----------------------------------------------------------------------------
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_API_BASE=
OPENAI_API_TYPE=
OPENAI_API_VERSION=
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI (optional deployment name)
AZURE_OPENAI_DEPLOYMENT=

# Hugging Face
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-2

# Google (PaLM / Gemini)
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro

# Deepseek
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-default

# -----------------------------------------------------------------------------
# Personas
# -----------------------------------------------------------------------------
PERSONAS_DIR=src/tinychatbot/personas
DEFAULT_PERSONA_ID=default

# -----------------------------------------------------------------------------
# Notifications (optional)
# -----------------------------------------------------------------------------
# Pushover for unknown question notifications
PUSHOVER_TOKEN=
PUSHOVER_USER=
